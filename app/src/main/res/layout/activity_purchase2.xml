<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Purchase2Activity">
    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_l"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구매"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:layout_marginStart="14dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_iv"/>

    <TextView
        android:id="@+id/select2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제 방식을 선택해주세요 "
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="24sp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@id/back_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/pay_iv"
        android:layout_width="323dp"
        android:layout_height="410dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@id/select2_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/paypay"/>

</androidx.constraintlayout.widget.ConstraintLayout>