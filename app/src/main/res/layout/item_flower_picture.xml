<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="200dp"
    android:background="@drawable/flower_frame"
    android:id="@+id/cl"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/flower_pic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flower_1_1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/like_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/liked_off"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/flower_pic_iv"/>

    <TextView
        android:id="@+id/flower_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장미"
        android:textColor="#101828"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/flower_pic_iv"
        app:layout_constraintStart_toStartOf="@id/flower_pic_iv"/>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30,000원"
            android:textSize="15sp"
            android:fontFamily="@font/poppins"
            android:textColor="#475E3E"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/flower_name_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>