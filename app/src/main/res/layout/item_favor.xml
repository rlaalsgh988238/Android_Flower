<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="200dp"
    android:background="@drawable/flower_frame"
    android:id="@+id/cl"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/flower_pic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flower_1_1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/like_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/liked_off"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/flower_pic_iv"/>

    <TextView
        android:id="@+id/flower_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jade plant"
        android:textColor="#101828"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:textSize="17sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/flower_pic_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>