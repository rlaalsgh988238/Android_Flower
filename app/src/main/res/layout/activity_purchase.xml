<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PurchaseActivity">
    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_l"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구매"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:layout_marginStart="14dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_iv"/>

    <TextView
        android:id="@+id/select2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거의 다 왔어요 "
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24sp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@id/back_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/sentence_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="특별한 기념일을 만들어보세요 "
        android:textColor="#98A2B3"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/select2_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/recommend_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#101828"
        android:text="함께 보낼 문구 입력"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@id/sentence_tv"
        app:layout_constraintStart_toStartOf="@id/back_iv"/>
    <TextView
        android:id="@+id/recommend_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#98A2B3"
        android:layout_marginTop="5dp"
        android:text="작은 카드로 만들어 보내드려요"
        app:layout_constraintTop_toBottomOf="@id/recommend_tv"
        app:layout_constraintStart_toStartOf="@id/recommend_tv"/>

    <EditText
        android:id="@+id/message_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="마음을 담은 문구를 적어주세요!"
        android:textColor="#98A2B3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/recommend_message_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#101828"
        android:text="배송지 입력"
        android:layout_marginTop="97dp"
        app:layout_constraintTop_toBottomOf="@id/message_et"
        app:layout_constraintStart_toStartOf="@id/back_iv"/>
    <TextView
        android:id="@+id/address_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#98A2B3"
        android:layout_marginTop="5dp"
        android:text="소중하게 포장하여 보내드려요"
        app:layout_constraintTop_toBottomOf="@id/address_tv"
        app:layout_constraintStart_toStartOf="@id/recommend_tv"/>

    <EditText
        android:id="@+id/address_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="주소를 검색해주세요"
        android:textColor="#98A2B3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/address_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <ImageView
        android:id="@+id/keep_iv"
        android:layout_width="173dp"
        android:layout_height="52dp"
        android:src="@drawable/pay"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>