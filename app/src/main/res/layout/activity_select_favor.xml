<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF"
    tools:context=".activity.SelectFavorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/select1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취향에 맞는 "
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="25sp"
            android:layout_marginTop="65dp"
            android:paddingTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/select2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="꽃을 골라주세요 "
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/select1_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/select3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="꼭 맞는 꽃을 추천해드릴게요! "
            android:textColor="#1E271A"
            android:fontFamily="@font/poppins"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/select2_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favor_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/select3_tv" />







    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/keep_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/keep"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>