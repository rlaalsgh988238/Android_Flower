<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainPageFragment"
    android:background="@color/isabelline"
    android:windowSoftInputMode="adjustPan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/logo_letter"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/btnSearch"
                style="?attr/materialIconButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="right"
                app:icon="@drawable/icon_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnUser"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnUser"
                style="?attr/materialIconButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:gravity="right"
                app:icon="@drawable/icon_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/layout_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_recommend"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/wallpaper_violet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_semibold"
                            android:paddingStart="10dp"
                            android:paddingTop="15dp"
                            android:text="안녕하세요 김민호 님!"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_semibold"
                            android:paddingStart="10dp"
                            android:text="딱 맞는 꽃을 추천해드릴게요"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_sliderweather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iconSun"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/icon_sun"
                                app:layout_constraintBottom_toBottomOf="@id/sliderWeather"
                                app:layout_constraintEnd_toStartOf="@id/sliderWeather"
                                app:layout_constraintTop_toTopOf="@id/sliderWeather"
                                app:tint="@color/white" />

                            <com.google.android.material.slider.Slider
                                android:id="@+id/sliderWeather"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:stepSize="1.0"
                                android:valueFrom="0.0"
                                android:valueTo="5.0"
                                app:layout_constraintEnd_toStartOf="@id/iconRain"
                                app:layout_constraintTop_toTopOf="parent"
                                app:thumbColor="@color/white"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <ImageView
                                android:id="@+id/iconRain"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/icon_rain"
                                app:layout_constraintBottom_toBottomOf="@id/sliderWeather"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/sliderWeather"
                                app:tint="@color/white" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_slider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iconHappy"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/icon_happy"
                                app:layout_constraintBottom_toBottomOf="@id/sliderFeeling"
                                app:layout_constraintEnd_toStartOf="@id/sliderFeeling"
                                app:layout_constraintTop_toTopOf="@id/sliderFeeling"
                                app:tint="@color/white" />

                            <com.google.android.material.slider.Slider
                                android:id="@+id/sliderFeeling"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:stepSize="1.0"
                                android:valueFrom="0.0"
                                android:valueTo="5.0"
                                app:layout_constraintEnd_toStartOf="@id/iconSad"
                                app:layout_constraintTop_toTopOf="parent"
                                app:thumbColor="@color/white"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <ImageView
                                android:id="@+id/iconSad"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/icon_sad"
                                app:layout_constraintBottom_toBottomOf="@id/sliderFeeling"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/sliderFeeling"
                                app:tint="@color/white" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_sliderlocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iconinside"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/mdi_won"
                                app:layout_constraintBottom_toBottomOf="@id/sliderlocation"
                                app:layout_constraintEnd_toStartOf="@id/sliderlocation"
                                app:layout_constraintTop_toTopOf="@id/sliderlocation"
                                app:tint="@color/white" />

                            <com.google.android.material.slider.Slider
                                android:id="@+id/sliderlocation"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:stepSize="1.0"
                                android:valueFrom="0.0"
                                android:valueTo="5.0"
                                app:layout_constraintEnd_toStartOf="@id/icon_outside"
                                app:layout_constraintTop_toTopOf="parent"
                                app:thumbColor="@color/white"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <ImageView
                                android:id="@+id/icon_outside"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/mdi_won"
                                app:layout_constraintBottom_toBottomOf="@id/sliderlocation"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/sliderlocation"
                                app:tint="@color/white" />
                        </androidx.constraintlayout.widget.ConstraintLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="추천결과"
                            android:textColor="@color/isabelline"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/layout_radius_30"
                            android:backgroundTint="#66FFFFFF"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="30dp">

                                <ImageView
                                    android:id="@+id/flower"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center"
                                    android:alpha="0.8"
                                    android:outlineProvider="background"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/yellow_fog" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/flowerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="안개꽃"
                                android:textColor="@color/black_olive"
                                android:textSize="18sp" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titletext_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="김민호 님을 위한 컨텐츠"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/layout_curation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:cardCornerRadius="10dp"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.7"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:text="겨울과 어울리는 \n꽃다발 구성 5가지"
                                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="손이 꽁꽁꽁 발이 꽁꽁꽁"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:alpha="0.7"
                                android:scaleType="centerCrop"
                                android:src="@drawable/pic_winter" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:alpha="0.7"
                                android:scaleType="centerCrop"
                                android:src="@drawable/pic_mindtest" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:text="MBTI보다 정확하다는\n꽃다발 심리테스트"
                                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="너 T야?"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.7"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:text="특별한 날 선물하기 좋은\n이색적인 꽃말들"

                                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="당신은 나의 동반자~"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:alpha="0.7"
                                android:scaleType="centerCrop"
                                android:src="@drawable/pic_special" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:alpha="0.7"
                                android:scaleType="centerCrop"
                                android:src="@drawable/flower_combined" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.7"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:text="건국 꽃집\n예쁜 꽃들이 많아요~"

                                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="서울 특별시 광진구 군자로 31"
                                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                            </LinearLayout>


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <TextView
                    android:id="@+id/titletext_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="김민호 님\n어떤 꽃을 구경하고 싶으세요?"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/layout_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_round_top"
                    android:orientation="vertical">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:padding="20dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_1"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="색감" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_2"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="향기" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_3"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="꽃말" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_4"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="계절" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_5"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가격" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_6"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="트렌드" />
                    </com.google.android.material.chip.ChipGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- 이 부분은 세로길이 비율 다른 사진 계속 끼워 넣으면 돼요-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                style="?attr/materialCardViewFilledStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                app:cardCornerRadius="10dp">
                                <FrameLayout
                                    android:id="@+id/flower1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/border_line"
                                        android:clipToOutline="true"
                                        android:src="@drawable/flower_combine1" />
                                    <ImageView
                                        android:id="@+id/bookmark1"
                                        android:layout_gravity="right|top"
                                        android:src="@drawable/symbols_bookmark"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </FrameLayout>


                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                style="?attr/materialCardViewFilledStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                app:cardCornerRadius="10dp">

                                <FrameLayout
                                    android:id="@+id/flower2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/border_line"
                                        android:clipToOutline="true"
                                        android:src="@drawable/blue_tulip" />
                                    <ImageView
                                        android:id="@+id/bookmark2"
                                        android:layout_gravity="right|top"
                                        android:src="@drawable/symbols_bookmark"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </FrameLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                style="?attr/materialCardViewFilledStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                app:cardCornerRadius="10dp">

                                <FrameLayout
                                    android:id="@+id/flower3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/border_line"
                                        android:clipToOutline="true"
                                        android:src="@drawable/red_rose" />
                                    <ImageView
                                        android:id="@+id/bookmark3"
                                        android:layout_gravity="right|top"
                                        android:src="@drawable/symbols_bookmark"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </FrameLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                style="?attr/materialCardViewFilledStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                app:cardCornerRadius="10dp">

                                <FrameLayout
                                    android:id="@+id/flower4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/border_line"
                                        android:clipToOutline="true"
                                        android:src="@drawable/red_rose" />
                                    <ImageView
                                        android:id="@+id/bookmark4"
                                        android:layout_gravity="right|top"
                                        android:src="@drawable/symbols_bookmark"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </FrameLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
